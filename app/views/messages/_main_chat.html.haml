.chat-main
  = render @messages
  .chat-main__group-info
    .chat-main__group-info__leftbox
      %p.chat-main__group-info__leftbox__message
        =@group.name
      %p.chat-main__group-info__leftbox__name
      - @group.users.each do |user|
        = user.name
    .chat-main__group-info__rightbox
      = link_to edit_group_path(@group),class: "edit" do
        edit
  .chat-main__message-list
    = render @messages

  .chat-main__message-form
    .form
      = form_for [@group, @message] do |f|
        .form__mask
          = f.text_field :content, class: 'form__mask__message', placeholder: 'type a message'
          = f.label :image, class: 'form__mask__image' do
            = icon('fas', 'image', class: 'icon')
            = f.file_field :image, class: 'hidden'
        = f.submit 'Send', class: 'form__submit'
    

         
